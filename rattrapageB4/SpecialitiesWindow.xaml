<Window x:Class="rattrapageB4.SpecialitiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Spécialités" Height="400" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="dgSpecialities" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom de la spécialité" Binding="{Binding Name}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Ajouter" Width="80" Margin="5" Click="BtnAdd_Click"/>
            <Button Content="Modifier" Width="80" Margin="5" Click="BtnEdit_Click"/>
            <Button Content="Supprimer" Width="80" Margin="5" Click="BtnDelete_Click"/>
        </StackPanel>
    </Grid>
</Window>
