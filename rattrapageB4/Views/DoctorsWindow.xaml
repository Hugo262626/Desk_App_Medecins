<Window x:Class="rattrapageB4.Views.DoctorsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Médecins"
        Height="650"
        Width="1100"
        MinHeight="600"
        MinWidth="1000"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Liste médecins -->
        <DataGrid x:Name="dgDoctors"
                  Grid.Column="0"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionChanged="DgDoctors_SelectionChanged">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom" Binding="{Binding LastName}" Width="*"/>
                <DataGridTextColumn Header="Prénom" Binding="{Binding FirstName}" Width="*"/>
                <DataGridTextColumn Header="Spécialité" Binding="{Binding Speciality.Name}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Formulaire (scrollable) -->
        <ScrollViewer Grid.Column="1"
                      MaxWidth="420"
                      VerticalAlignment="Stretch"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto"
                      Margin="20,0,0,0">

            <StackPanel>
                <TextBlock Text="Fiche médecin" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                <Label Content="Nom"/>
                <TextBox x:Name="txtLastName"
                         MaxLength="50"
                         PreviewTextInput="Name_PreviewTextInput"
                         DataObject.Pasting="Name_Pasting"/>

                <Label Content="Prénom" Margin="0,8,0,0"/>
                <TextBox x:Name="txtFirstName"
                         MaxLength="50"
                         PreviewTextInput="Name_PreviewTextInput"
                         DataObject.Pasting="Name_Pasting"/>

                <Label Content="Spécialité" Margin="0,8,0,0"/>
                <ComboBox x:Name="cboSpeciality" DisplayMemberPath="Name" Height="26"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <Button Content="Ajouter" Width="100" Margin="5" Click="BtnAdd_Click"/>
                    <Button Content="Modifier" Width="100" Margin="5" Click="BtnEdit_Click"/>
                    <Button Content="Supprimer" Width="100" Margin="5" Click="BtnDelete_Click"/>
                </StackPanel>

                <Button Content="Nouveau (vider)" Height="30" Margin="5" Click="BtnClear_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
