<Window x:Class="rattrapageB4.Views.PatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion des Patients" Height="400" Width="600">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Table des patients -->
        <DataGrid x:Name="PatientGrid"
                  Grid.Column="0"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  SelectionChanged="PatientGrid_SelectionChanged">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="40"/>
                <DataGridTextColumn Header="Nom" Binding="{Binding LastName}" Width="*"/>
                <DataGridTextColumn Header="Prénom" Binding="{Binding FirstName}" Width="*"/>
                <DataGridTextColumn Header="Téléphone" Binding="{Binding Phone}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Formulaire -->
        <StackPanel Grid.Column="1" Margin="20">

            <Label Content="Nom"/>
            <TextBox x:Name="TxtLastName" MaxLength="20"/>

            <Label Content="Prénom"/>
            <TextBox x:Name="TxtFirstName" MaxLength="20"/>

            <Label Content="Téléphone"/>
            <TextBox x:Name="TxtPhone"
                TextChanged="TxtPhone_TextChanged"
                MaxLength="10" />

            <Label Content="Email"/>
            <TextBox x:Name="TxtEmail"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Ajouter" Width="100" Margin="5" Click="AddPatient_Click"/>
                <Button Content="Modifier" Width="100" Margin="5" Click="UpdatePatient_Click"/>
                <Button Content="Supprimer" Width="100" Margin="5" Click="DeletePatient_Click"/>
            </StackPanel>

        </StackPanel>

    </Grid>
</Window>
