<Window x:Class="rattrapageB4.Views.PatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestion des patients" Height="500" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <!-- DATA GRID -->
        <DataGrid x:Name="PatientGrid"
                  Grid.Row="0"
                  AutoGenerateColumns="False"
                  SelectionChanged="PatientGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom" Binding="{Binding LastName}" Width="*"/>
                <DataGridTextColumn Header="Prénom" Binding="{Binding FirstName}" Width="*"/>
                <DataGridTextColumn Header="Téléphone" Binding="{Binding Phone}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- FORMULAIRE -->
        <StackPanel Grid.Row="1" Margin="0,10,0,0">
            <Label>Nom :</Label>
            <TextBox x:Name="TxtLastName" Height="25"/>

            <Label>Prénom :</Label>
            <TextBox x:Name="TxtFirstName" Height="25"/>

            <Label>Téléphone :</Label>
            <TextBox x:Name="TxtPhone" Height="25" MaxLength="10" PreviewTextInput="TxtPhone_PreviewTextInput"/>

            <Label>Email :</Label>
            <TextBox x:Name="TxtEmail" Height="25"/>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Ajouter" Width="90" Margin="5" Click="AddPatient_Click"/>
                <Button Content="Modifier" Width="90" Margin="5" Click="UpdatePatient_Click"/>
                <Button Content="Supprimer" Width="90" Margin="5" Click="DeletePatient_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
