<Window x:Class="rattrapageB4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Clinic - Menu Principal" Height="400" Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#f0f0f0" Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Text="Menu Principal"
                   FontSize="26" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0 10"/>

        <!-- Boutons -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="250" >

            <Button Content="Patients" Height="40" Margin="0 10" Click="BtnPatients_Click"/>

            <Button Content="Médecins" Height="40" Margin="0 10" Click="BtnDoctors_Click"/>

            <Button Content="Spécialités" Height="40" Margin="0 10" Click="BtnSpecialities_Click"/>

            <Button Content="Rendez-vous" Height="40" Margin="0 10" Click="BtnAppointments_Click"/>

        </StackPanel>

    </Grid>
</Window>
